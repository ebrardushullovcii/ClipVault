{
  "$schema": "./settings.schema.json",
  "bufferDurationSeconds": 60,
  "quality": {
    "resolution": "1080p",
    "fps": 60,
    "nvencPreset": "p7",
    "cqLevel": 22
  },
  "hotkey": {
    "modifiers": ["Ctrl", "Alt"],
    "key": "F9"
  },
  "audio": {
    "captureSystemAudio": true,
    "captureMicrophone": true,
    "sampleRate": 48000
  },
  "outputDirectory": "./Clips",
  "autoDetectGames": true,
  "captureMethod": "auto"
}
